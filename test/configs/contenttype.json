      "usergroup","user"
    ],
    "fields": [{
        "identifier": "title",
        "type": "text",
        "name": "Title",
        "required": true
      },
      {
        "identifier": "summary",
        "type": "richtext",
        "name": "Summary",
        "required": false
      }
    ]
  },
  "role": {
