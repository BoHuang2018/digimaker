        "required": false
      }
    ]
  },
  "user": {
    "name": "User",
    "table_name": "dm_user",
    "name_pattern": "{firstname} {lastname}",
    "has_version": true,
    "has_location": true,
    "fields_display": [
      "login",
      "password"
    ],
    "fields": [{
        "identifier": "login",
        "type": "text",
        "name": "Username",
        "required": true
      },
      {
        "identifier": "password",
        "type": "password",
        "name": "Password",
        "required": false
      },
      {
        "identifier": "firstname",
        "type": "text",
        "name": "First name",
        "required": true
      },
      {
        "identifier": "lastname",
        "type": "text",
        "name": "Last name",
        "required": true
      },
      {
        "identifier": "email",
        "type": "text",
        "name": "Email",
        "required": true
      }
    ]
  },
  "image": {
    "name": "Image",
    "table_name": "dm_image",
    "has_version": false,
    "has_location": false,
    "data_fields":[{"identifier":"parent_id", "type":"int"}, {"identifier":"imagetype", "type":"string"}],
    "fields": [
      {
        "identifier": "title",
        "type": "text",
        "name": "Title",
        "required": true
      },
      {
        "identifier": "path",
        "type": "text",
        "name": "Image",
        "required": true
      }
    ]
  },
  "file": {
    "name": "File",
    "table_name": "dm_file",
    "has_version": false,
