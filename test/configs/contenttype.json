{
  "folder": {
    "name": "Folder",
    "table_name": "dm_folder",
    "name_pattern": "{title}",
    "has_version": false,
    "has_location": true,
    "allowed_types": [
      "folder",
      "article",
      "report",
      "usergroup",
      "user"
    ],
    "fields": [{
        "identifier": "title",
        "type": "text",
        "name": "Title",
        "required": true
      },
      {
        "identifier": "folder_type",
        "type": "text",
        "name": "Folder Type",
        "required": false
      },
      {
        "identifier": "summary",
        "type": "richtext",
        "name": "Summary",
        "required": false
      }
    ]
  },
  "article": {
    "Name": "Article",
    "table_name": "dm_article",
    "has_version": true,
    "has_location": true,
    "name_pattern": "{title}",
    "fields": [{
        "identifier": "title",
        "type": "text",
        "name": "Title",
        "required": true
      },
      {
        "identifier": "editors",
        "type": "text",
        "name": "Editors",
        "required": false
      },
      {
        "identifier": "coverimage",
        "type": "text",
        "name": "Cover image",
        "required": false
      },
      {
        "identifier": "summary",
        "type": "richtext",
        "name": "Summary",
        "required": false
      },
      {
        "identifier": "body",
        "type": "richtext",
        "name": "Body",
        "required": false
      },
      {
        "identifier": "relations",
        "type": "container",
        "is_output": true,
        "name": "Relations",
        "required": false,
        "children_order": [
          "related_articles",
          "useful_resources"
        ],
        "children": [{
            "identifier": "related_articles",
            "type": "relationlist",
            "required": false,
            "name": "Related articles",
            "parameters": {
              "type": "article"
            }
          },
          {
            "identifier": "useful_resources",
            "type": "relationlist",
            "required": false,
            "name": "Useful resources",
            "parameters": {
              "type": "*"
            }
          }
        ]
      }
    ]
  },
  "usergroup": {
    "name": "User group",
