{
  "folder":{
     "table_name": "dm_folder",
     "versioning": false,
     "locationing": true,
     "fields": { "title"  : {"type":"text", "required":true},
                 "summary": {"type":"richtext", "required":false}
               }
   },

  "article":{
      "table_name": "dm_article",
      "versioning": true,
      "locationing": true,
      "fields": { "title"  : {"type":"text", "required":true},
                  "coverimage":{"type":"image_relation", "required":false},
                  "summary": {"type":"richtext", "required":false},
                  "body": {"type": "richtext", "required": false},
                  "related_articles": { "type":"relationlist",
                                        "required":false,
                                        "parameters":{ "type": "article" }
                                      }
                }
   },
  "user":{
      "table_name": "dm_user",
      "versioning": true,
      "locationing": true,
      "fields":{ "login": {"type":"text", "required":false},
                 "password": {"type":"password", "required":false},
                 "firstname": {"type":"text", "required":false},
                 "lastname": {"type":"text", "required":false} }
               }
}
