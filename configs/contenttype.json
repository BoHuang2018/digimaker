{
  "folder":{
     "table_name": "dm_folder",
     "versioning": false,
     "locationing": true,
     "fields_display":["title", "summary"],
     "sub_types":["folder","article"],
     "fields": { "title"  : {"type":"text", "name":"Title", "required":true},
                 "summary": {"type":"richtext", "name":"Summary", "required":false}
               }
   },

  "article":{
      "table_name": "dm_article",
      "versioning": true,
      "locationing": true,
      "fields_display":["title", "editors", "coverimage", "summary", "body", "related_articles", "useful_resources"],
      "fields": { "title"  : {"type":"text", "name":"Title", "required":true},
                  "editors": {"type":"editorlist", "name":"Editors", "required": false},
                  "coverimage":{"type":"image_relation", "name":"Cover image", "required":false},
                  "summary": {"type":"richtext", "name":"Summary", "required":false},
                  "body": {"type": "richtext", "name":"Body", "required": false},
                  "related_articles": { "type":"relationlist",
                                        "required":false,
                                        "name":"Related articles",
                                        "parameters":{ "type": "article" }
                                    },
                 "useful_resources": { "type":"relationlist",
                                      "required":false,
                                      "name":"Useful resources",
                                      "parameters":{ "type": "*" }
                                  }
                }
   },
  "user":{
      "table_name": "dm_user",
      "versioning": true,
      "locationing": true,
      "fields_display":["firstname", "lastname", "login", "password"],
      "fields":{ "login": {"type":"text", "name":"Username","required":false},
                 "password": {"type":"password", "name":"Password", "required":false},
                 "firstname": {"type":"text", "name":"First name", "required":false},
                 "lastname": {"type":"text", "name":"Last name", "required":false} }
               }
}
